---
const footer = [
  { text: "Privacy Policy", link: "/privacy-policy" },
  { text: "Sitemap", link: "#" },
  { text: "RSS Feed", link: "#" },
  { text: "Editorial Policy", link: "/editorial-policy" },
];
---

<footer>
  <div class="wrapper footer-grid">
    <ul class="flex-row">
      {
        footer.map((item) => (
          <li>
            <a href={item.link}>{item.text}</a>
          </li>
        ))
      }
    </ul>
    <div class="copy">Copyright Â© 2024 | TheLoneVoice.in</div>
  </div>
</footer>

<style>
  footer {
    background-color: #000000e6;
    color: var(--clr-light);
    padding-block: 1em;
  }

  .footer-grid {
    display: grid;
    gap: 0.75em;
    grid-template-columns: 1fr;

    @media (min-width: 600px) {
      grid-template-columns: 2fr 1fr;
      gap: 0.25em;
    }
  }

  ul {
    list-style: none;
    padding: 0;
    width: 100%;
    gap: 1.5em;
    align-items: center;
    justify-content: space-evenly;

    @media (min-width: 600px) {
      justify-content: normal;
    }
  }

  li a {
    color: var(--clr-light);
    font-size: var(--fs-4);
  }

  .copy {
    text-align: center;

    @media (min-width: 600px) {
      text-align: right;
    }
  }
</style>
