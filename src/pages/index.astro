---
import BaseLayout from "@layouts/BaseLayout.astro";
import Card from "@components/Card.astro";
import FirstCard from "@components/FirstCard.astro";
import TagCloud from "@components/TagCloud.astro";
import SearchField from "@components/SearchField.astro";

import { fetchAndFilterPosts } from "@utils/helpers";

const posts = await fetchAndFilterPosts();
// console.log(Object.values(allPosts)[0]);

const title = "TheLoneVoice";
const description = "Welcome to my blog";
---

<BaseLayout {title} {description}>
    <main class="wrapper py grid">
        <div>
            <!-- First Card -->
            {posts.slice(0, 1).map((post) => <FirstCard {post} />)}
            <div class="card-grid">
                <!-- Rest of Cards -->
                {posts.slice(1).map((post) => <Card {post} />)}
            </div>
        </div>
        <aside class="sidebar">
            <SearchField />
            <TagCloud />
        </aside>
    </main>
</BaseLayout>
