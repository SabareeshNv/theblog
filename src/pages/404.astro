---
import { Image } from "astro:assets";

import BaseLayout from "@layouts/BaseLayout.astro";
import notfound from "../assets/images/notfound.png";

const title = "404 Error - Page Not found";
const description = "Page Not found";
---

<BaseLayout {title} {description}>
  <main class="py wrapper">
    <div class="wrapper-small">
      <Image
        src={notfound}
        alt="page not found"
        loading={"eager"}
        fetchpriority={"high"}
        decoding={"sync"}
        class="notfound"
      />
      <span
        >The page you are looking for does not exist. You may visit our <a
          href="/">Homepage</a
        ></span
      >
    </div>
  </main>
</BaseLayout>

<style>
  .wrapper-small {
    max-width: 800px;
    margin-inline: auto;
  }
  .notfound {
    max-width: 400px;
    margin-inline: auto;
  }

  span {
    display: block;
    font-size: var(--fs-5);
    text-align: center;
    margin-block-start: 1.5em;
  }

  a {
    color: var(--clr-brand);
    text-decoration: underline;
    text-underline-offset: 5px;
    text-decoration-thickness: 2px;
  }
</style>
